    <button onclick="checkAnswers()">Check Answers</button>

    <script>
        const grid = [
            ['L','I','G','H','T','*','W','I','N','G','S','*','N','E','W'],
            ['I','*','*','*','A','*','I','*','E','*','T','*','E','*','I'],
            ['G','*','*','*','D','*','N','*','S','*','A','*','S','*','N'],
            ['H','*','B','L','A','N','D','*','T','*','R','*','T','*','G'],
            ['T','*','E','*','T','*','S','*','*','*','S','*','*','*','S'],
            ['S','T','A','R','E','*','*','B','E','A','R','S','*','*','*'],
            ['*','*','R','*','*','*','A','*','A','*','*','P','E','A','R'],
            ['W','H','I','S','K','E','R','S','T','*','*','E','*','*','I'],
            ['I','*','S','*','*','*','*','*','L','*','E','W','*','*','S'],
            ['N','*','*','*','*','*','*','*','A','*','A','*','*','*','E'],
            ['G','*','O','D','E','*','S','A','N','D','T','R','A','P','*'],
            ['S','*','H','*','Y','*','P','*','T','*','*','I','*','*','*'],
            ['*','*','M','*','E','*','E','*','I','*','*','V','*','*','*'],
            ['*','*','*','C','A','N','W','*','C','*','*','E','Y','E','S'],
            ['A','R','C','H','*','E','A','T','*','S','U','R','*','E','L']
        ];

        const crossword = document.getElementById('crossword');

        for (let i = 0; i < grid.length; i++) {
            for (let j = 0; j < grid[i].length; j++) {
                const cell = document.createElement('div');
                cell.classList.add('cell');
                if (grid[i][j] === '*') {
                    cell.classList.add('black');
                } else {
                    const input = document.createElement('input');
                    input.maxLength = 1;
                    cell.appendChild(input);
                }
                crossword.appendChild(cell);
            }
        }

        // Add numbers to cells
        const numberedCells = [
            {row: 0, col: 0, num: 1},
            {row: 0, col: 6, num: 4},
            {row: 3, col: 2, num: 8},
            {row: 5, col: 7, num: 9},
            {row: 6, col: 6, num: 11},
            {row: 6, col: 11, num: 13},
            {row: 6, col: 11, num: 14},
            {row: 7, col: 0, num: 16},
            {row: 10, col: 2, num: 18},
            {row: 10, col: 8, num: 20},
            {row: 14, col: 2, num: 22},
            {row: 7, col: 0, num: 24},
            {row: 5, col: 0, num: 26},
            {row: 14, col: 5, num: 27},
            {row: 0, col: 12, num: 28},
            {row: 14, col: 14, num: 30},
            {row: 0, col: 12, num: 31},
            {row: 14, col: 0, num: 33},
            {row: 14, col: 6, num: 34},
            {row: 13, col: 13, num: 36},
            {row: 14, col: 0, num: 37},
            {row: 0, col: 0, num: 1},
            {row: 0, col: 10, num: 2},
            {row: 1, col: 8, num: 3},
            {row: 0, col: 6, num: 5},
            {row: 13, col: 11, num: 6},
            {row: 2, col: 8, num: 7},
            {row: 5, col: 7, num: 10},
            {row: 7, col: 13, num: 12},
            {row: 5, col: 0, num: 15},
            {row: 2, col: 8, num: 17},
            {row: 1, col: 4, num: 19},
            {row: 3, col: 2, num: 21},
            {row: 10, col: 8, num: 23},
            {row: 10, col: 2, num: 25},
            {row: 6, col: 8, num: 29},
            {row: 12, col: 2, num: 32},
            {row: 13, col: 13, num: 35}
        ];

        numberedCells.forEach(cell => {
            const index = cell.row * 15 + cell.col;
            const cellElement = crossword.children[index];
            const numberSpan = document.createElement('span');
            numberSpan.classList.add('number');
            numberSpan.textContent = cell.num;
            cellElement.appendChild(numberSpan);
        });

        function checkAnswers() {
            const inputs = document.querySelectorAll('#crossword input');
            inputs.forEach((input, index) => {
                const row = Math.floor(index / 15);
                const col = index % 15;
                if (grid[row][col] !== '*') {
                    if (input.value.toUpperCase() === grid[row][col]) {
                        input.style.backgroundColor = '#aaffaa';
                    } else {
                        input.style.backgroundColor = '#ffaaaa';
                    }
                }
            });
        }
    </script>
